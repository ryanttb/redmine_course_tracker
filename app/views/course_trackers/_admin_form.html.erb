<% form_for(@course_tracker) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field(:project_id, :value => @project.id) %>
  
  <p>
    <%= f.label(:title) %><br />
    <%= f.text_field(:title) %>
  </p>

  <p>
    <%= f.label(:description) %><br />
    <%= f.text_area(:description, :rows => 2) %>
  </p>

  <p>
    <%= f.label(:status) %><br />
    <%= f.select(:status, CourseTracker::STATUS_OPTIONS, {:include_blank => true}) %>   
  </p>

  <p>
    <%= f.submit('Save') %>
  </p>
<% end %>

